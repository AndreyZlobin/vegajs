    "url": "https://github.com/AndreyZlobin/vegajs"
  },
  "keywords": [
    "frontend",
    "react",
    "vue",
    "svelte",
    "zero-deps",
    "type-safe",
    "logger",
    "typescript",
    "logging",
    "log-level",
    "json-logs",
    "context-logging",
    "custom-logs",
    "external-log-transmission"
  ],
  "version": "0.0.1",
  "types": "./dist/types/index.d.ts",
  "main": "./dist/lib/index.js",
  "module": "./dist/es/index.js",
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "modern build",
    "build:watch": "modern build -w",
    "ci-publish": "npm publish --access public",
    "tests": "vitest run",
    "tests:ci": "vitest run --reporter=junit --outputFile.junit=junit.xml",
    "typecheck": "tsc --noEmit",
    "eslint": "eslint --cache --ext .js,.jsx,.ts,.tsx . --config .eslintrc",
